let
  goDeps = [
    <% revisions.each do |revision| %>
    {
      root = "<%= revision.root %>";
      <% if revision.root.start_with?("github.com") %>
      src = fetchFromGitHub {
        owner = "<%= owner(revision) %>";
        repo = "<%= repo(revision) %>";
        rev = "<%= revision.rev %>";
        sha256 = "<%= sha256(revision) %>";
      };
      <% elsif revision.vcs == "git" %>
      src = fetchgit {
        url = "<%= revision.repo %>";
        rev = "<%= revision.rev %>";
        sha256 = "<%= sha256(revision) %>";
      };
      <% elsif revision.vcs == "hg" %>
      src = fetchhg {
        url = "<%= revision.repo %>";
        rev = "<%= revision.rev %>";
        sha256 = "<%= sha256(revision) %>";
      };
