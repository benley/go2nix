#!/usr/bin/env ruby

$: << File.expand_path("../../lib", __FILE__)
$: << File.expand_path("../../bin", __FILE__)

require 'go2nix'
require 'json'
require 'fileutils'
require 'opt_parser'

opts = OptParser.parse(ARGV)

if opts.til == :auto && opts.revision != nil
  opts.til = Go2nix::Go::Package.date_of_revision(opts.package, opts.revision)
  puts opts.til
end

exit 0
